#!/usr/bin/env python

import sys
import os
from os.path import join, dirname, pardir

# if running locally
sys.path.insert(0, join(dirname(__file__), pardir))

# if installed
x,y = sys.version_info[0:2]
x = str(x)
y = str(y)

sys.path.insert(1, join(dirname(__file__), pardir,'lib',
    'python'+x+'.'+y,'dist-packages'))

sys.path.insert(1, join(dirname(__file__), pardir,'lib',
    'python'))

import caffeine

caffeine.main()

